<%= form_for @payment, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :method, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :method, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :paid, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :paid, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  payments_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
